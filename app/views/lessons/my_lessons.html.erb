<h1>My Lessons</h1>
<%= render partial: 'shared/create_path', locals:{type: 'Lesson', new_path: new_lesson_path } if @teacher %><br />
<% @lessons.each do |lesson| %>
  <h2><%= link_to lesson.name, lesson %></h2><br />
  <p>In course: <%= link_to lesson.course.name, lesson.course %></p>
  <%= lesson.description %><br /><br />
<% end %>
