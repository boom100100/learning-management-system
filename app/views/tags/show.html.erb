<h1><%= @tag.name %></h1>

<%= render partial: 'shared/update_delete_admin', locals:{edit_path: edit_tag_path(@tag), delete_path: tag_path(@tag) } %>

<h2>Lessons</h2>

<%= link_to 'Create New Lesson', new_lesson_path if @teacher_or_admin %><br />
<% @tag.lessons.each do |lesson| %>
  <h2><%= link_to lesson.name, lesson %></h2><br />
  From course: <%= link_to lesson.course.name, lesson.course %><br /><br />
<% end %>
